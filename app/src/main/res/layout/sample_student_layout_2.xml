<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        app:cardBackgroundColor="@color/low_blue"
        app:cardCornerRadius="@dimen/_20sdp"
        app:contentPadding="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:scrollHorizontally="true"
            android:text="MusheerAhmed Jamadar"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/studentRoom"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:checkable="false"
            android:clickable="false"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Medium"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:chipBackgroundColor="@color/dark_blue" />

        <TextView
            android:id="@+id/studentPrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:scrollHorizontally="true"
            android:text="1910053"
            android:textColor="@color/desc_text"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/studentYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:scrollHorizontally="true"
            android:text="FY"
            android:textColor="@color/desc_text"
            android:textSize="@dimen/_11ssp" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>