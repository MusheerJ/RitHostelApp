<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/leaveItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:contentPadding="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/leaveItemDestination"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"

            android:scrollHorizontally="true"
            android:text="fdgkjfdglkfdlkgfdlkdjgflgdwsadsdaddassddskj"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/leaveItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/inter_medium"
            android:text="16/23/33"
            android:textSize="@dimen/_10ssp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/leaveStatus"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"

            android:checkable="false"
            android:clickable="false"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Medium"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/leaveItemReason"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:text="Ellipsis is triple dots (...) at the end of the line. It is required when you want to keep your sentence in a single line. If your test reached the end of the line then automatically create ... at the end"
            android:textSize="@dimen/_11ssp" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>