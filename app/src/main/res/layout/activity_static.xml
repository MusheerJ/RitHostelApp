<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".Laundry.StaticActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/assignTaskBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        app:cardBackgroundColor="@color/bg_color"
        app:cardElevation="0.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/_10sdp"

            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_medium"
            android:text="Laundry Details"
            android:textColor="@color/title_text"
            android:textSize="@dimen/_16ssp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="#2C2B3F"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignTaskBar"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/prn2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2C2B3F"
            android:gravity="center"
            android:text="1903079"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2C2B3F"
            android:gravity="center"
            android:text="1903079"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/l1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:stretchColumns="1,2">

                <TableRow android:background="#C3F44E">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="TYPE"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_column="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="COUNT"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow

                    android:background="#2C2B3F">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="SHIRTS"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/shirts1"
                        android:layout_column="1"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow

                    android:background="#2C2B3F">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="PANTS"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pants1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow

                    android:background="#2C2B3F">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="BEDSHEET"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bedsheet1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow

                    android:background="#2C2B3F">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="TOWEL"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/towel1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow

                    android:background="#2C2B3F">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="BLANKET"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/blanket1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow

                    android:background="#2C2B3F">

                    <TextView
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="PILLOW COVER"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pillow1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </TableRow>


                <TableRow android:background="#C3F44E">

                    <TextView
                        android:id="@+id/ctotal"
                        android:layout_column="1"
                        android:layout_gravity=""
                        android:background="#AC9997"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="TOTAL"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/total1"
                        android:layout_column="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                </TableRow>


            </TableLayout>


        </ScrollView>


    </LinearLayout>

    <ImageView
        android:id="@+id/lo"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/logoo"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lo"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/club"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/changa_light"
            android:gravity="center"
            android:text="@string/rit_hostel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"></com.google.android.material.textview.MaterialTextView>
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



